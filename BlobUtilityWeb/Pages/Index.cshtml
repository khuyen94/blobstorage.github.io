@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
    int count = 1;
}

<div class="text-center">
    <div>
        <h1 class="display-4">List Blobs</h1>
    </div>
    <div>
    </div>
    <div style="overflow: auto; height:700px">
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Date</th>
                    <th scope="col">Customer</th>
                    <th scope="col">Blob Name</th>
                    <th scope="col">Last Modified</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.BlobItems)
                {
                    <tr>
                        <td scope="row">@count</td>
                        <td>@item.Properties.LastModified.Value.Date.ToShortDateString()</td>
                        <td>@item.Name.Split('/').First()</td>
                        <td>@item.Name</td>
                        <td>@item.Properties.LastModified</td>
                    </tr>
                    count++;
                }
            </tbody>
        </table>
    </div>
</div>
